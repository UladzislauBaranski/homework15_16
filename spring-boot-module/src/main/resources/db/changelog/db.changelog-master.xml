<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="1" author="vladbaransky@gmail.com">
        <createTable tableName="Item">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(40)"/>
            <column name="description" type="varchar(40)"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="vladbaransky@gmail.com">
        <createTable tableName="ItemDetails">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"
                             foreignKeyName="FK_Item_ItemDetails"
                             referencedTableName="Item" referencedColumnNames="id" deleteCascade="true"/>
            </column>
            <column name="price" type="varchar(40)">
            </column>
        </createTable>
    </changeSet>
    <changeSet id="3" author="vladbaransky@gmail.com">
        <createTable tableName="Shop">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(40)"/>
            <column name="location" type="varchar(40)"/>
        </createTable>
    </changeSet>
    <changeSet id="4" author="vladbaransky@gmail.com">
        <createTable tableName="Item_Shop">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="id_item" type="BIGINT">
                <constraints foreignKeyName="FK_ItemShop_Item"
                             referencedTableName="Item" referencedColumnNames="id" deleteCascade="true"/>
            </column>
            <column name="id_shop" type="BIGINT">
                <constraints foreignKeyName="FK_ItemShop_Shop"
                             referencedTableName="Shop" referencedColumnNames="id" deleteCascade="true"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>

